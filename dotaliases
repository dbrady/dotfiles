## Misc Programming
alias findrb='echo "find . -name "*.rb" -print0 | xargs -0 grep -Hn" && find . -name "*.rb" -print0 | xargs -0 grep -Hn'
alias finderb='echo "find . -name "*.erb" -print0 | xargs -0 grep -Hn" && find . -name "*.erb" -print0 | xargs -0 grep -Hn'
alias findrhtml='echo "find . -name "*.rhtml" -print0 | xargs -0 grep -Hn" && find . -name "*.rhtml" -print0 | xargs -0 grep -Hn'

## Git
alias gpmm="echo 'git push monkey master' && git push monkey master"
alias gpom="echo 'git push origin master' && git push origin master"
alias gst="echo 'git status' && git status"
alias gws="echo 'git commit -m Whitespace' && git commit -m Whitespace"
alias gbod='echo git commit -m "BOD `date +%F`" && git commit -m "BOD `date +%F`"'
alias gsi="echo 'git submodule init' && git submodule init"
alias gsu="echo 'git submodule update' && git submodule update"
alias gca="echo 'git commit -a' && git commit -a"
alias gsb="git branch | cut -c 3- | selecta | xargs git checkout"

alias gf='git flow'
alias gff='git flow feature'
alias gfr='git flow release'

alias cpd="cap production deploy"

