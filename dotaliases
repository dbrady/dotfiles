# .aliases - because my alias collection is way outta control

# Useful aliases
alias ls="ls -G --color=auto"
alias ll="ls -l --color=auto"
# alias 'top'='top -o cpu' # OSX
alias 't'='tree -ChL 1'
alias 'up'='cd ..'
alias 'up2'='cd ../..'
alias 'up3'='cd ../../..'
alias 'up4'='cd ../../../..'
alias 'up5'='cd ../../../../..'
alias 'up6'='cd ../../../../../..'
alias 'up7'='cd ../../../../../../..'
alias 'up8'='cd ../../../../../../../..'
alias 'up9'='cd ../../../../../../../../..'

# Programming crap
